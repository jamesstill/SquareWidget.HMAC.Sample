@model IEnumerable<SampleUI.Models.Widget>

@{
    ViewData["Title"] = "Index";
}

<h2>Widgets Sample using SquareWidget.HMAC.Client.Core</h2>
<h4>Documentation: <a href="https://squarewidget.com/squarewidget-hmac-middleware">https://squarewidget.com/squarewidget-hmac-middleware</a> </h4>

<p>
    <a class="btn btn-primary" role="button" asp-action="Create">Create New</a>
</p>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shape)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shape)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", null, new { id=item.ID }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Delete", "Delete", null, new { id = item.ID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
}
    </tbody>
</table>
